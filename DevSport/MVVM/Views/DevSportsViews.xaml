<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DevSport.MVVM.Views.DevSportsViews"
             Title="DevSportsViews">
    <VerticalStackLayout>
        <Entry Placeholder="Name" Text="{Binding Name}"/>
        <Entry Placeholder="Reps" Text="{Binding Repetitions}" Keyboard="Numeric"/>
        <Entry Placeholder="Weigt" Text="{Binding Weight}"/>
        <DatePicker />
        <Button Text="Save" Command="{Binding SaveWorkoutCommand}"/>
    </VerticalStackLayout>
</ContentPage>